<Window x:Class="MD5Util.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MD5 Encryptor" Height="200" Width="375">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="91*"/>
            <ColumnDefinition Width="251*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Clear Text" HorizontalAlignment="Left" Margin="22,28,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.368,0"/>
        <TextBox x:Name="clearText" HorizontalAlignment="Left" Height="23" Margin="0,31,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250" Grid.Column="1"/>
        <Button Content="Encrypt" HorizontalAlignment="Left" Margin="175,133,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="Button_Click_1"/>
        <TextBlock x:Name="encText" Grid.Column="1" HorizontalAlignment="Left" Margin="19,70,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="23" Width="231"/>
        <Label Content="Encrypted Text" HorizontalAlignment="Left" Margin="22,70,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.314,0" Grid.ColumnSpan="2" Width="90"/>

    </Grid>
</Window>
